<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
	default-lazy-init="true">

	<description>安全防御相关服务</description>

	<!-- 静态资源访问 -->
	<bean id="staticResourceHttpRequestHandler"
		class="com.acooly.integration.web.StaticResourceHttpRequestHandler" />
	<bean id="staticResourceSpringFilter" class="com.acooly.integration.web.StaticResourceSpringFilter" />

	<!-- CSRF防御filter -->
	<bean id="csrfDefenseFilter"
		class="com.acooly.module.security.defence.csrf.CsrfDefenseFilter">
		<property name="tokenRepository" ref="httpSessionCsrfTokenRepository" />
		<property name="requireCsrfProtectionMatcher" ref="csrfRequestMatcher" />
		<property name="accessDeniedHandler" ref="accessDeniedHandler" />
	</bean>

	<bean id="httpSessionCsrfTokenRepository"
		class="org.springframework.security.web.csrf.HttpSessionCsrfTokenRepository" />

	<bean id="csrfRequestMatcher"
		class="com.acooly.module.security.defence.csrf.CsrfRequestMatcher">
		<property name="allowedUrls">
			<list>
				<value>/mock/gateway/*</value>
			</list>
		</property>
	</bean>

	<bean id="accessDeniedHandler"
		class="org.springframework.security.web.access.AccessDeniedHandlerImpl">
		<property name="errorPage" value="/error/csrf.htm" />
	</bean>

</beans>