	<profiles>
		<profile>
			<id>develop</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>deploy</id>
			<activation>
				<property>
					<name>opt</name>
					<value>deploy</value>
				</property>
			</activation>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
						<includes>
							<include>spring/acooly/**/*</include>
							<include>validation/**/*</include>
							<include>META-INF/**</include>
						</includes>
					</resource>
				</resources>
			</build>
		</profile>
